{
    "env": {
        "es2020": true
    },
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "no-trailing-spaces": "error",
        "semi": ["error", "always"],
        "indent": [
            "error",
            2
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1,
                "maxEOF": 0
            }
        ],
        "space-infix-ops": [
            "error",
            {
                "int32Hint": false
            }
        ],
        "space-before-blocks": "error",
        "keyword-spacing": [
            "error",
            {
                "before": true
            }
        ],
        "key-spacing": [
            "error",
            {
                "beforeColon": true,
                "afterColon": true
            }
        ]
    }
}